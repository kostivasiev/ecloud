X-consumer-custom-id:  0-0
X-consumer-groups:  ecloud.read, ecloud.write
Content-Type:  application/json

{
    "name": "foo",
    "sequence": 10,
    "firewall_policy_id": "fwp-34030886-dev",
    "source": "ANY",
    "destination": "ANY",
    "action": "ALLOW",
    "direction": "IN",
    "enabled": true,
    "ports": [
        {
            "protocol": "TCP",
            "source": "ANY",
            "destination": "ANY"
        }
    ]
}

