###
# Create Volume
POST https://{{host}}/{{version}}/volumes
Accept: */*
Cache-Control: no-cache
X-consumer-custom-id: 0-0
X-consumer-groups: ecloud.read, ecloud.write
Content-Type: application/json

{
  "name": "Test-Volume",
  "vpc_id": "{{dev_vpc_id}}",
  "capacity": 25,
  "availability_zone_id": "{{dev_availability_zone_id}}"
}

> {%
client.test('Test Volume Created', function () {
    client.assert(response.status === 201, '201 status not received');
    client.global.set('volume_id', response.body.data.id);
    client.log('Volume ID: ' + response.body.data.id);
});
%}

###
# Delete volume
DELETE https://{{host}}/{{version}}/volumes/{{volume_id}}
Accept: */*
Cache-Control: no-cache
X-consumer-custom-id: 0-0
X-consumer-groups: ecloud.read, ecloud.write
Content-Type: application/json

> {%
client.test('Test Volume Deletion', function () {
    client.assert(response.status === 204, '204 status not received');
});
%}